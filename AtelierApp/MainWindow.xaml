<Window x:Class="AtelierApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AtelierApp"
        mc:Ignorable="d"
        Title="Ателье ``Игла``" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="739*"/>
        </Grid.ColumnDefinitions>
        <!-- шапка -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Crimson" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="607" Margin="63,0,0,0">
                <!-- Кнопки для всех авторизованных -->
                <Button x:Name="NavServices" Margin="5,0" Padding="15,5" Width="90" Visibility="Collapsed" Click="NavServices_Click">
                    <TextBlock Text="Заказать" FontSize="12"/>
                </Button>
                <Button x:Name="NavProfile" Margin="5,0" Padding="15,5" Width="142" Visibility="Collapsed" Click="NavProfile_Click">
                    <TextBlock  Text="Личный кабинет" FontSize="12" />
                </Button>
                <!-- Кнопки для администратора -->
                <Button x:Name="NavAdminPanel" Margin="5,0" Padding="15,5" Visibility="Collapsed" Background="#e67e22" Width="188" Click="NavAdminPanel_Click">
                    <TextBlock  Text="Панель администратора" FontSize="12" />
                </Button>
                <!-- Кнопки для мастера -->
                <Button x:Name="NavMasterWorkspace" Margin="5,0" Padding="15,5" Visibility="Collapsed" Background="#3498db" Width="126" Click="NavMasterWorkspace_Click">
                    <TextBlock Text="Рабочее место мастера" FontSize="12"/>
                </Button>
                <!-- Кнопки для швеи -->
                <Button x:Name="NavSeamstressWorkspace" Margin="5,0" Padding="15,5" Visibility="Collapsed" Background="#9b59b6" Click="NavSeamstressWorkspace_Click">
                    <TextBlock Text="Мои задания" FontSize="12"/>
                </Button>
            </StackPanel>
            <Image Width="45" Height="45" HorizontalAlignment="Left" Margin="5" Source="/Resources/NeedleIcon.png"/>
            <Button x:Name="btnBack" HorizontalAlignment="Right" Content="Назад" Click="btnBack_Click"/>
        </Grid>

        <Frame Name="FrmMain" NavigationUIVisibility="Hidden" ContentRendered="FrmMain_ContentRendered" Grid.ColumnSpan="2" Margin="0,60,0,-374"/>
    </Grid>
</Window>
