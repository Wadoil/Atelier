<Page x:Class="AtelierApp.Pages.Account"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AtelierApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Личный кабинет">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="Личный кабинет" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

                <GroupBox Header="Персональные данные" Margin="0,0,0,20">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Column="0" Text="Фамилия:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding User.Surname}" IsReadOnly="True" Background="#F0F0F0" Margin="0,5,0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя:" VerticalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding User.Name}" IsReadOnly="True" Background="#F0F0F0" Margin="0,5,0,0"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Отчество:" VerticalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding User.MiddleName}" IsReadOnly="True" Background="#F0F0F0" Margin="0,5,0,0"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Email:" VerticalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding User.Email}" IsReadOnly="True" Background="#F0F0F0" Margin="0,5,0,0"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Телефон:" VerticalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding User.PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,0"/>
                        </Grid>

                        <TextBlock Text="Адрес доставки:" Margin="0,10,0,5"/>
                        <TextBox Text="{Binding Client.Address, UpdateSourceTrigger=PropertyChanged}" 
                             Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                        <Button Content="Сохранить изменения" Command="{Binding SaveProfileCommand}" 
                            HorizontalAlignment="Right" Margin="0,10,0,0" Padding="10,5"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Безопасность" Margin="0,0,0,20">
                    <StackPanel>
                        <Button Content="Сменить пароль..." Command="{Binding ChangePasswordCommand}" 
                            HorizontalAlignment="Left" Padding="10,5"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Последние заказы">
                    <ListView ItemsSource="{Binding RecentOrders}" Height="200">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="№ заказа" DisplayMemberBinding="{Binding ID}" Width="80"/>
                                <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding OrderDate, StringFormat={}{0:dd.MM.yyyy}}" Width="100"/>
                                <GridViewColumn Header="Статус" DisplayMemberBinding="{Binding StatusName}" Width="120"/>
                                <GridViewColumn Header="Стоимость" DisplayMemberBinding="{Binding Cost, StringFormat={}{0:C}}" Width="100"/>
                                <GridViewColumn Header="Действие">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Подробнее" Command="{Binding DataContext.ViewOrderDetailsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                CommandParameter="{Binding ID}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
