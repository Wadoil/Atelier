<Page x:Class="AtelierApp.Pages.Account"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AtelierApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="Личный кабинет">

    <!-- ScrollViewer для вертикальной прокрутки -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="VerticalOnly">

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Личный кабинет" 
                       FontSize="24" FontWeight="Bold" 
                       Grid.Row="0" Margin="0,0,0,20"/>

            <!-- Персональные данные -->
            <GroupBox Header="Персональные данные" Grid.Row="1" Margin="0,0,0,20">
                <StackPanel>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Фамилия -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Фамилия:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="SurnameTextBlock" 
                                   VerticalAlignment="Center" Margin="0,0,0,5"/>

                        <!-- Имя -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя:" VerticalAlignment="Center" Margin="0,5,5,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="NameTextBlock" 
                                   VerticalAlignment="Center" Margin="0,5,0,5"/>

                        <!-- Отчество -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Отчество:" VerticalAlignment="Center" Margin="0,5,5,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="MiddleNameTextBlock" 
                                   VerticalAlignment="Center" Margin="0,5,0,5"/>

                        <!-- Email -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Email:" VerticalAlignment="Center" Margin="0,5,5,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="EmailTextBlock" 
                                   VerticalAlignment="Center" Margin="0,5,0,5"/>

                        <!-- Телефон -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Телефон:" VerticalAlignment="Center" Margin="0,5,5,5"/>
                        <TextBox Grid.Row="4" Grid.Column="1" x:Name="PhoneTextBox" 
                                 Margin="0,5,0,5" Height="30"/>

                        <!-- Адрес -->
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Адрес:" VerticalAlignment="Center" Margin="0,5,5,5"/>
                        <TextBox Grid.Row="5" Grid.Column="1" x:Name="AddressTextBox" 
                                 Height="60" TextWrapping="Wrap" AcceptsReturn="True" 
                                 Margin="0,5,0,5"/>
                    </Grid>

                    <Button Content="Сохранить" 
                            Click="SaveProfile_Click"
                            HorizontalAlignment="Right" 
                            Margin="0,10,0,0" 
                            Padding="15,8"/>
                </StackPanel>
            </GroupBox>

            <!-- Безопасность -->
            <GroupBox Header="Безопасность" Grid.Row="2" Margin="0,0,0,20">
                <StackPanel>
                    <Button Content="Сменить пароль" 
                            Click="ChangePassword_Click"
                            HorizontalAlignment="Left" 
                            Padding="15,8" Width="151"/>
                </StackPanel>
            </GroupBox>

            <!-- Последние заказы -->
            <GroupBox Header="Последние заказы" Grid.Row="3" Margin="0,0,0,20">
                <ListView x:Name="RecentOrdersListView" Height="200">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="№ заказа" Width="80" DisplayMemberBinding="{Binding ID}"/>
                            <GridViewColumn Header="Дата" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding OrderDate, StringFormat={}{0:dd.MM.yyyy}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Услуги" Width="200" DisplayMemberBinding="{Binding Services}"/>
                            <GridViewColumn Header="Статус" Width="120" DisplayMemberBinding="{Binding StatusName}"/>
                            <GridViewColumn Header="Стоимость" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Cost, StringFormat={}{0:C}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Действие" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Подробнее" 
                                                Tag="{Binding ID}"
                                                Click="ViewOrderDetails_Click"
                                                Padding="5,2"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>

            <!-- Статус сообщение -->
            <TextBlock x:Name="StatusTextBlock" Grid.Row="4"
                       Margin="0,10,0,20" TextWrapping="Wrap"
                       Visibility="Collapsed"/>
        </Grid>
    </ScrollViewer>
</Page>