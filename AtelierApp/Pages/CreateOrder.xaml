<Page x:Class="AtelierApp.Pages.CreateOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AtelierApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Оформление заказа">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="Оформление нового заказа" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

                <GroupBox Header="Выбор услуг" Margin="0,0,0,20">
                    <StackPanel>
                        <ComboBox x:Name="ServicesComboBox"
                                  DisplayMemberPath="Name"
                                  SelectionChanged="ServicesComboBox_SelectionChanged"
                                  Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Click="AddService_Click"
                                    Padding="10,5" Margin="0,0,10,0" Width="133">
                                <TextBlock Text="Добавить услугу" FontSize="12"/>
                            </Button>
                            <TextBlock Text="Количество:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox x:Name="QuantityTextBox" Text="1" Width="50" 
                                     TextChanged="QuantityTextBox_TextChanged"/>
                        </StackPanel>

                        <ListView x:Name="SelectedServicesListView" Height="150" Margin="0,10,0,0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Услуга" DisplayMemberBinding="{Binding ServiceName}" Width="200"/>
                                    <GridViewColumn Header="Количество" DisplayMemberBinding="{Binding Quantity}" Width="80"/>
                                    <GridViewColumn Header="Цена" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Price, StringFormat={}{0:C}}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Сумма" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Total, StringFormat={}{0:C}}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Удалить" Width="60">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="X" Click="RemoveService_Click"
                                                        CommandParameter="{Binding}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <TextBlock Text="Общая стоимость:" FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Right"/>
                        <TextBlock x:Name="TotalCostTextBlock" Text="0 ₽" FontSize="18" FontWeight="Bold" 
                                   Foreground="Green" HorizontalAlignment="Right"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Детали заказа" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Описание заказа (пожелания, особенности):"/>
                        <TextBox x:Name="DescriptionTextBox" Height="80" TextWrapping="Wrap" 
                                 AcceptsReturn="True" Margin="0,5,0,10"
                                 TextChanged="DescriptionTextBox_TextChanged"/>
                    </StackPanel>
                </GroupBox>

                <Button Click="CreateOrder_Click" 
                        Height="40" FontWeight="Bold">
                    <TextBlock Text="Оформить заказ" FontSize="12"/>
                </Button>

                <TextBlock x:Name="StatusTextBlock" 
                           Margin="0,10,0,0" TextWrapping="Wrap"
                           Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>