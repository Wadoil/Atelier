<Page x:Class="AtelierApp.Pages.CreateOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AtelierApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Оформление заказа">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="Оформление нового заказа" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

                <GroupBox Header="Выбор услуг" Margin="0,0,0,20">
                    <StackPanel>
                        <ComboBox ItemsSource="{Binding Services}" 
                                  DisplayMemberPath="Name"
                                  SelectedItem="{Binding SelectedService}"
                                  Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="Добавить услугу" 
                                    Command="{Binding AddServiceCommand}"
                                    Padding="10,5" Margin="0,0,10,0"/>
                            <TextBlock Text="Количество:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox Text="{Binding Quantity}" Width="50"/>
                        </StackPanel>

                        <ListView ItemsSource="{Binding SelectedServices}" Height="150" Margin="0,10,0,0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Услуга" DisplayMemberBinding="{Binding ServiceName}" Width="200"/>
                                    <GridViewColumn Header="Количество" DisplayMemberBinding="{Binding Quantity}" Width="80"/>
                                    <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding Price, StringFormat={}{0:C}}" Width="100"/>
                                    <GridViewColumn Header="Сумма" DisplayMemberBinding="{Binding Total, StringFormat={}{0:C}}" Width="100"/>
                                    <GridViewColumn Header="Удалить">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="X" Command="{Binding DataContext.RemoveServiceCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        CommandParameter="{Binding}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <TextBlock Text="Общая стоимость:" FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding TotalCost, StringFormat={}{0:C}}" FontSize="18" FontWeight="Bold" 
                                   Foreground="Green" HorizontalAlignment="Right"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Детали заказа" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Описание заказа (пожелания, особенности):"/>
                        <TextBox Text="{Binding Description}" Height="80" TextWrapping="Wrap" 
                                 AcceptsReturn="True" Margin="0,5,0,10"/>

                        <TextBlock Text="Желаемая дата готовности:"/>
                        <DatePicker SelectedDate="{Binding DesiredDate}" Margin="0,5,0,10"/>

                        <TextBlock Text="Прикрепить эскиз:"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBox Text="{Binding SketchPath}" Width="300" IsReadOnly="True" Margin="0,0,10,0"/>
                            <Button Content="Обзор..." Command="{Binding BrowseSketchCommand}" Padding="10,5"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <Button Content="Оформить заказ" Command="{Binding CreateOrderCommand}" 
                        Height="40" FontSize="16" FontWeight="Bold"
                        IsEnabled="{Binding CanCreateOrder}"/>

                <TextBlock Text="{Binding StatusMessage}" Foreground="{Binding StatusColor}" 
                           Margin="0,10,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
