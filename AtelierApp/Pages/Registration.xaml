<Page x:Class="AtelierApp.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AtelierApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Регистрация нового клиента" FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <!-- Личные данные -->
                <GroupBox Header="Личные данные" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock Text="Фамилия*:" Margin="0,0,0,5"/>
                        <TextBox x:Name="SurnameTextBox" Margin="0,0,0,10" Height="30"/>

                        <TextBlock Text="Имя*:" Margin="0,0,0,5"/>
                        <TextBox x:Name="NameTextBox" Margin="0,0,0,10" Height="30"/>

                        <TextBlock Text="Отчество:" Margin="0,0,0,5"/>
                        <TextBox x:Name="MiddleNameTextBox" Margin="0,0,0,10" Height="30"/>
                    </StackPanel>
                </GroupBox>

                <!-- Контактные данные -->
                <GroupBox Header="Контактные данные" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock Text="Телефон*:" Margin="0,0,0,5"/>
                        <TextBox x:Name="PhoneTextBox" Margin="0,0,0,10" Height="30"/>

                        <TextBlock Text="Email*:" Margin="0,0,0,5"/>
                        <TextBox x:Name="EmailTextBox" Margin="0,0,0,10" Height="30"/>

                        <TextBlock Text="Адрес доставки:" Margin="0,0,0,5"/>
                        <TextBox x:Name="AddressTextBox" Height="60" TextWrapping="Wrap" 
                                 AcceptsReturn="True" Margin="0,0,0,10"/>
                    </StackPanel>
                </GroupBox>

                <!-- Данные для входа -->
                <GroupBox Header="Данные для входа" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock Text="Логин*:" Margin="0,0,0,5"/>
                        <TextBox x:Name="LoginTextBox" Margin="0,0,0,10" Height="30"/>

                        <TextBlock Text="Пароль*:" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" Height="30"/>

                        <TextBlock Text="Подтверждение пароля*:" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,10" Height="30"/>
                    </StackPanel>
                </GroupBox>

                <TextBlock x:Name="ErrorText" Foreground="Red" TextWrapping="Wrap" 
                           Margin="0,10" Visibility="Collapsed"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Зарегистрироваться"  
                        Width="150" Height="35" Margin="0,0,10,0"/>
                <Button Content="Отмена"  
                        Width="100" Height="35"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
