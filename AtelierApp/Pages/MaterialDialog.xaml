<Window x:Class="AtelierApp.Pages.MaterialDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование материала" 
        Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TitleTextBlock" 
                   Text="{Binding Title}" 
                   FontSize="20" FontWeight="Bold" 
                   Grid.Row="0" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Артикул -->
                <TextBlock Text="Артикул*:" Margin="0,0,0,5"/>
                <TextBox x:Name="ArticleTextBox" Margin="0,0,0,10" Height="30"/>

                <!-- Наименование -->
                <TextBlock Text="Наименование*:" Margin="0,0,0,5"/>
                <TextBox x:Name="NameTextBox" Margin="0,0,0,10" Height="30"/>

                <!-- Категория -->
                <TextBlock Text="Категория*:" Margin="0,0,0,5"/>
                <ComboBox x:Name="CategoryComboBox" 
                          DisplayMemberPath="Name"
                          SelectedValuePath="ID"
                          Margin="0,0,0,10" Height="30"/>

                <!-- Цвет -->
                <TextBlock Text="Цвет:" Margin="0,0,0,5"/>
                <TextBox x:Name="ColorTextBox" Margin="0,0,0,10" Height="30"/>

                <!-- Единица измерения -->
                <TextBlock Text="Единица измерения*:" Margin="0,0,0,5"/>
                <ComboBox x:Name="UnitComboBox" 
                          DisplayMemberPath="Name"
                          SelectedValuePath="ID"
                          Margin="0,0,0,10" Height="30"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Текущее количество -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Текущее количество*:" Margin="0,0,0,5"/>
                        <TextBox x:Name="CurrentAmountTextBox" Margin="0,0,0,10" Height="30"/>
                    </StackPanel>

                    <!-- Минимальный запас -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Минимальный запас*:" Margin="0,0,0,5"/>
                        <TextBox x:Name="MinimalAmountTextBox" Margin="0,0,0,10" Height="30"/>
                    </StackPanel>
                </Grid>

                <!-- Цена -->
                <TextBlock Text="Цена*:" Margin="0,0,0,5"/>
                <TextBox x:Name="PriceTextBox" Margin="0,0,0,10" Height="30"/>

                <!-- Поставщик -->
                <TextBlock Text="Поставщик*:" Margin="0,0,0,5"/>
                <ComboBox x:Name="SupplierComboBox" 
                          DisplayMemberPath="CompanyName"
                          SelectedValuePath="ID"
                          Margin="0,0,0,10" Height="30"/>

                <TextBlock Text="* - обязательные поля" Foreground="Gray" FontSize="10" Margin="0,5,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Сохранить" 
                    Click="SaveButton_Click" 
                    Height="35" Background="LightGreen"/>
            <Button Grid.Column="2" Content="Отмена" 
                    Click="CancelButton_Click" 
                    Height="35" Background="LightPink"/>
        </Grid>

        <TextBlock x:Name="ErrorTextBlock" Grid.Row="2" 
                   Foreground="Red" TextWrapping="Wrap"
                   Margin="0,0,0,40" VerticalAlignment="Bottom"
                   Visibility="Collapsed"/>
    </Grid>
</Window>